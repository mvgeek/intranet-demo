//
// TestFlight Configuration
// This file contains TestFlight-specific build settings
//

// Code Signing Settings for TestFlight
CODE_SIGN_IDENTITY = iPhone Distribution
CODE_SIGN_STYLE = Manual
DEVELOPMENT_TEAM = YOUR_DEVELOPMENT_TEAM_ID

// Bundle Identifier
PRODUCT_BUNDLE_IDENTIFIER = com.vilnius.intranet

// Provisioning Profile - Must be Distribution profile
PROVISIONING_PROFILE_SPECIFIER = YOUR_DISTRIBUTION_PROVISIONING_PROFILE

// TestFlight Settings
SWIFT_ACTIVE_COMPILATION_CONDITIONS = TESTFLIGHT $(inherited)
GCC_PREPROCESSOR_DEFINITIONS = TESTFLIGHT=1 $(inherited)

// Deployment Target
IPHONEOS_DEPLOYMENT_TARGET = 15.0

// Architecture - Only device architectures
ARCHS = $(ARCHS_STANDARD)
VALID_ARCHS = arm64 arm64e

// Swift Settings
SWIFT_VERSION = 5.0
SWIFT_OPTIMIZATION_LEVEL = -O
SWIFT_COMPILATION_MODE = wholemodule

// Bitcode - Required for TestFlight
ENABLE_BITCODE = YES

// App Icon
ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon

// Strip Debug Symbols but keep some info for crash logs
STRIP_INSTALLED_PRODUCT = YES
SEPARATE_STRIP = NO
STRIP_STYLE = debugging

// Dead Code Elimination
DEAD_CODE_STRIPPING = YES

// Optimization
GCC_OPTIMIZATION_LEVEL = s

// Enable dSYM generation for crash reporting
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym